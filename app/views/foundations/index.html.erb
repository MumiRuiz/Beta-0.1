<p id="notice"><%= notice %></p>

<h1>Listing Foundations</h1>

<table>
  <thead>
    <tr>
      <th>Foundation name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
      <th>Location</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foundations.each do |foundation| %>
      <tr>
        <td><%= foundation.foundation_name %></td>
        <td><%= foundation.username %></td>
        <td><%= foundation.email %></td>
        <td><%= foundation.password %></td>
        <td><%= foundation.location %></td>
        <td><%= foundation.website %></td>
        <td><%= link_to 'Show', foundation %></td>
        <td><%= link_to 'Edit', edit_foundation_path(foundation) %></td>
        <td><%= link_to 'Destroy', foundation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

