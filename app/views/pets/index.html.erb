<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Pet name</th>
      <th>Pet age</th>
      <th>Pet type</th>
      <th>Pet breed</th>
      <th>Pet gender</th>
      <th>Pet size</th>
      <th>Pet special needs</th>
      <th>Pet household match</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.pet_name %></td>
        <td><%= pet.pet_age %></td>
        <td><%= pet.pet_type %></td>
        <td><%= pet.pet_breed %></td>
        <td><%= pet.pet_gender %></td>
        <td><%= pet.pet_size %></td>
        <td><%= pet.pet_special_needs %></td>
        <td><%= pet.pet_household_match %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

